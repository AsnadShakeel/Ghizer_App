                android:text="Fashion &amp; Beauty"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C1C1C1" />

        <LinearLayout
            android:id="@+id/books"
            android:layout_width="match_parent"
